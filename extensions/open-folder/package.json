{
  "name": "open-folder",
  "displayName": "Open Folder",
  "description": "Open all files of folder in the same VSCode instance.",
  "version": "0.2.1",
  "license": "MIT",
  "icon": "media/logo.png",
  "keywords": [
    "productive",
    "tool",
    "files",
    "folder"
  ],
  "engines": {
    "vscode": "^1.37.0"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out",
  "contributes": {
    "configuration": {
      "title": "📁Open Folder",
      "properties": {
        "open-folder.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Display on status bar."
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "open-folder.open",
          "when": "false"
        }
      ],
      "editor/title": [
        {
          "command": "open-folder.open",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "open-folder.open",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "open-folder.open",
        "title": "📁Open Folder",
        "icon": {
          "dark": "./media/folder.light.svg",
          "light": "./media/folder.dark.svg"
        }
      },
      {
        "command": "open-folder.search",
        "category": "📁Open Folder",
        "title": "Search Folder To Open"
      }
    ]
  },
  "dependencies": {
    "fast-glob": "3.0.4"
  },
  "scripts": {
    "dev": "tsc -w",
    "build": "rm -rf released && mkdir released && ts-node scripts/build"
  }
}
