{
  "extends": "@ts-mono/base/tsconfig",
  "exclude": [
    "node_modules",
    "out/**/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/.tsBuildInfoFile",
    "sourceMap": true,
    "outDir": "out",
    "target": "esnext",
  },
}
